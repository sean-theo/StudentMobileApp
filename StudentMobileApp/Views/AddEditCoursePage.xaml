<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentMobileApp.Views.AddEditCoursePage"
             Title="Add or Edit Course">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label 
                Text="Course Details"
                FontSize="22" 
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label Text="Course Title" />
            <Entry x:Name="CourseTitleEntry" Placeholder="e.g., Mobile App Development" />

            <Label Text="Start Date" />
            <DatePicker x:Name="StartDatePicker" />

            <Label Text="End Date" />
            <DatePicker x:Name="EndDatePicker" />

            <Label Text="Course Status" />
            <Picker x:Name="StatusPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>In Progress</x:String>
                        <x:String>Completed</x:String>
                        <x:String>Dropped</x:String>
                        <x:String>Plan to Take</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label Text="Instructor Name" />
            <Entry x:Name="InstructorNameEntry" Placeholder="Full Name" />

            <Label Text="Instructor Phone" />
            <Entry x:Name="InstructorPhoneEntry" Placeholder="e.g., 999-987-6543" Keyboard="Telephone" />

            <Label Text="Instructor Email" />
            <Entry x:Name="InstructorEmailEntry" Placeholder="e.g., instructor@school.edu" Keyboard="Email" />

            <Label Text="Notes" />
            <Editor x:Name="NotesEditor"
                    Placeholder="Optional notes about the course"
                    AutoSize="TextChanges"
                    HeightRequest="100" />

            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="Save" Clicked="OnSaveClicked" />
                <Button Text="Cancel" Clicked="OnCancelClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>