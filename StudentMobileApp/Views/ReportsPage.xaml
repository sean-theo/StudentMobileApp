<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentMobileApp.Views.ReportsPage"
             Title="Reports">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Student Mobile App Report"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Button Text="Generate Report"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    CornerRadius="8"
                    Clicked="OnGenerateReportClicked" />

            <Label x:Name="TimestampLabel"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <Editor x:Name="ReportViewer"
                    IsReadOnly="True"
                    AutoSize="TextChanges"
                    FontSize="13"
                    HeightRequest="500"
                    BackgroundColor="#f9f9f9"
                    Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

