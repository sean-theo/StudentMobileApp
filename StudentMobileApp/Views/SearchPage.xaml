<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentMobileApp.Views.SearchPage"
             Title="Search">
    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Search Terms, Courses, or Assessments"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <SearchBar x:Name="SearchBar"
                   Placeholder="Enter keyword..."
                   SearchButtonPressed="OnSearchClicked" />

        <CollectionView x:Name="ResultsCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="LightGray" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding DisplayText}" FontAttributes="Bold" />
                            <Label Text="{Binding Type}" FontSize="12" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
