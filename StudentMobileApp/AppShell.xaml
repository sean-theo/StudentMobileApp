<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:StudentMobileApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Student Mobile App">

    <FlyoutItem Title="Terms" Icon="icon_terms.png">
        <ShellContent ContentTemplate="{DataTemplate views:TermsListPage}" Route="TermsListPage" />
    </FlyoutItem>

    <FlyoutItem Title="Search" Icon="icon_search.png">
        <ShellContent ContentTemplate="{DataTemplate views:SearchPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Reports" Icon="icon_reports.png">
        <ShellContent ContentTemplate="{DataTemplate views:ReportsPage}" />
    </FlyoutItem>

    <MenuItem Text="Logout" IconImageSource="logout.png" Clicked="OnLogoutClicked" />

</Shell>

